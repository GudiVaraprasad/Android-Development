<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="380dp"
        android:layout_height="98dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="390dp"
        android:layout_height="98dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-382dp"
        android:layout_marginLeft="-382dp"
        android:layout_marginTop="135dp"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:background="#F1EEEE"
        android:paddingBottom="10dp"
        android:text="Name"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonAction"
        android:layout_width="351dp"
        android:layout_height="53dp"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/textViewName"
        android:layout_alignLeft="@+id/textViewName"
        android:layout_alignEnd="@+id/textViewName"
        android:layout_alignRight="@+id/textViewName"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:gravity="right"
        android:text="VIEW DETAILS"
        android:textColor="#3F51B5"
        android:textSize="20sp"
        app:backgroundTint="#F1EEEE" />

</RelativeLayout>