<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="-20dp"
    tools:layout_editor_absoluteY="8dp">

    <EditText
        android:id="@+id/classinp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Business"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="355dp" />

    <TextView
        android:id="@+id/luggagetext"
        android:layout_width="116dp"
        android:layout_height="29dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="Class:"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="570dp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="210dp"
        android:layout_height="127dp"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="420dp">

        <RadioButton
            android:id="@+id/windowseat"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="Window"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="146dp"
            tools:layout_editor_absoluteY="428dp" />

        <RadioButton
            android:id="@+id/anyseat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aisle"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="146dp"
            tools:layout_editor_absoluteY="464dp" />

        <RadioButton
            android:id="@+id/anyseat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dont Care"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="146dp"
            tools:layout_editor_absoluteY="512dp" />
    </RadioGroup>

    <CheckBox
        android:id="@+id/vegetarian"
        android:layout_width="112dp"
        android:layout_height="37dp"
        android:text="Vegetarian"
        tools:layout_editor_absoluteX="171dp"
        tools:layout_editor_absoluteY="613dp" />

    <TextView
        android:id="@+id/classtext2"
        android:layout_width="116dp"
        android:layout_height="29dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="Seat:"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="429dp" />

    <SeekBar
        android:id="@+id/luggageseekBar"
        android:layout_width="165dp"
        android:layout_height="26dp"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="573dp" />

    <TextView
        android:id="@+id/classtext"
        android:layout_width="116dp"
        android:layout_height="29dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="Class:"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="363dp" />

    <EditText
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="USA"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="286dp" />

    <TextView
        android:id="@+id/countrytext"
        android:layout_width="116dp"
        android:layout_height="29dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="Country:"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="294dp" />

    <EditText
        android:id="@+id/lname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Lockie"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="157dp" />

    <TextView
        android:id="@+id/lnametext"
        android:layout_width="116dp"
        android:layout_height="29dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="Last Name:"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="165dp" />

    <TextView
        android:id="@+id/Heading"
        android:layout_width="298dp"
        android:layout_height="46dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="Oceanic Flight 815 Booking"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/fnametext"
        android:layout_width="116dp"
        android:layout_height="29dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="First Name:"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="98dp" />

    <EditText
        android:id="@+id/fname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="John"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="90dp" />

    <EditText
        android:id="@+id/passphrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="******"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="222dp" />

    <TextView
        android:id="@+id/passtext"
        android:layout_width="116dp"
        android:layout_height="29dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="Passphrase:"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="231dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="265dp"
        android:layout_height="43dp"
        android:text="Place Reservation"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="664dp" />

</androidx.constraintlayout.widget.ConstraintLayout>